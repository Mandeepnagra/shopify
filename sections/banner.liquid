<div
  class="banner bg-black bg-{{ section.settings.background_position }} bg-{{ section.settings.background_repeat }}"
  style='background-image:url(
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url }}
  {%- endif -%}
  )'>
  <div
    class="container p-6 md:p-0 md:pt-[157px] md:pb-[151px]">
    <div
      class="grid grid-cols-1 md:grid-cols-2">
      <div
        class="col-start-1 md:col-start-2">
        <div
          class="text-{{section.settings.align_content}} p-8 lg:pt-[75px] lg:pb-[71px] lg:pl-16 lg:pr-[5.75rem] bg-white">
          <div
            class="sub-heading text-primary text-lg leading-[25px] mb-2">{{ section.settings.banner_subheading }}</div>
          <h1
            class="text-4xl lg:text-7xl lg:leading-[65px] mb-6">
            {{ section.settings.banner_heading }}
          </h1>
          <div class="mb-10">
            <p class="text-lg leading-[25px]">{{ section.settings.banner_description }}</p>
          </div>
          <div
            class="inline-block">
            <a class="inline-block px-11 md:px-16 py-3.5 border border-solid border-primary text-white bg-primary hover:bg-white hover:text-primary text-sm leading-[14px] uppercase font-bold rounded-[30px]"
              href="{{section.settings.button_link}}">{{ section.settings.button_label }} </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "select",
        "id": "background_repeat",
        "options": [
          {
            "value": "repeat",
            "label": "Repeat"
          }, {
            "value": "no-repeat",
            "label": "No-Repeat"
          }
        ],
        "default": "repeat",
        "label": "Background Repeat"
      },
      {
        "type": "select",
        "id": "background_position",
        "options": [
          {
            "value": "auto",
            "label": "Auto"
          }, {
            "value": "contain",
            "label": "Contain"
          }, {
            "value": "cover",
            "label": "Cover"
          }
        ],
        "default": "auto",
        "label": "Background Position"
      },
      {
        "type": "text",
        "id": "banner_heading",
        "label": "Heading",
        "default": "Transform your world together"
      }, {
        "type": "text",
        "id": "banner_subheading",
        "label": "Sub-Heading",
        "default": "Talent wanted"
      }, {
        "type": "textarea",
        "id": "banner_description",
        "label": "Description",
        "default": "Craft experiences that customers rave about. Our customers are at the heart of everything we do. Understand the market, analyze trends, and deliver something better."
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Join our team"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "select",
        "id": "align_content",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Content Alignment"
      }
    ],
    "presets": [
      {
        "name": "Banner"
      }
    ]
  }
{% endschema %}